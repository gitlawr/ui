<section class="header has-tabs clearfix">
  <h1>
    <p style="margin:0;line-height:1.5" class="text-small">#{{model.runSequence}}</p>
    <p style="margin:0;line-height:1" class="text-small text-italic text-muted">by {{model.pipelineSource.name}}</p>
  </h1>

  <div class="right-buttons">
    <button class="btn bg-link btn-sm icon-btn p-0" {{action 'run'}}>
        <span class="darken"><i class="icon icon-refresh text-small"/></span>
        <span>Run Again</span>
    </button>
  </div>
</section>

<section class="pipeline-container">
  {{pipeline-stages pipeline=model.pipelineSource stagesDraggable=false review=true model=model.pipelineSource.stages}}
</section>

<div class="mt-40"></div>
<section class="header has-tabs clearfix">
  <ul class="tab-nav">
    <li>
      <a href="javascript:void(0);" class="{{if isHistory 'active'}} ember-view">Records</a>
    </li>
  </ul>
</section>

<section>
  {{#if filterdPiplineHistory.length}}
    {{!-- {{#accordion-list as |al expandFn| }} --}}
      {{#each filterdPiplineHistory as |activity|}}
        {{#accordion-list-item
             title=model.repository
             detail=(concat-str model.branch ' ' (sub-str model.commitInfo 0 8) ' ' (date-str model.start_ts) )
             status=model.status
             statusClass=model.status
             expandAll=true
             expand=(action expandFn)
             componentName='activity-table'
             className=(concat-str "header-pipeline" model.status)
             as | parent |
        }}
          {{pipeline-history-table
            stageInfo = model.pipelineSource.stages
            body=activity.activity_stages
            activity=model
            sortBy=sortBy
            bulkActions=true
            search=true
            paging=true
            showHost=true
            showInstanceState=false
            groupByKey=groupBy
            groupByRef="stack"
          }}
        {{/accordion-list-item}}
      {{/each}}
    {{!-- {{/accordion-list}} --}}
  {{else}}
    <p class="text-center text-muted">No {{if isHistory 'History' 'Activity'}}</p>
  {{/if}}

</section>

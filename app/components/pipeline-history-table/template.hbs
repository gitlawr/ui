{{#accordion-list className="test" as |al expandFn| }}
  {{#each filtered as |stage stageIndex| }}
    {{#accordion-list-item-pipeline
             title=stage.name
             status=stage.status
             date=(date-str stage.start_ts)
             duration=stage.duration
             statusClass=stage.status
             expandAll=al.expandAll
             expand=(action expandFn)
             componentName='container-table'
             as | parent |
        }}
        {{#each stage.activity_steps as |step stepIndex|}}
          <div class="accordion-header header-pipeline item" class={{step.status}}>
            <div class="title">
              <span class="text-cell">{{step.type}}</span>
              <span class="text-cell">
                <i class="icon" class={{pipeline-status-to-icon step.status}}></i>&nbsp;{{step.status}}
              </span>
              <span class="text-cell" style="cursor:pointer;" {{action 'showLogs' stageIndex stepIndex}}>
                {{step.message}}
              </span>
            </div>
            <div class="badge-state">
              <p class="mt-0 mb-0"><i class="icon icon-history"></i>&nbsp;{{date-duration duration}}&nbsp;seconds</p>
            </div>
          </div>
        {{/each}}
    {{/accordion-list-item-pipeline}}
  {{/each}}
{{/accordion-list}}